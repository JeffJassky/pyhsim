{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@physim/core": ["packages/core/src/index.ts"]
    },
    "types": ["node", "vite/client", "hammerjs"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.ts",
    "tests/**/*.ts",
    "env.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./packages/core" }
  ]
}